<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_shareWifi"
            android:layout_width="85dp"
            android:layout_height="83dp"
            android:layout_marginBottom="178dp"
            android:clickable="true"
            app:backgroundTint="@android:color/holo_green_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/fab_getWifi"
            app:layout_constraintTop_toBottomOf="@+id/fab_getWifi"
            app:srcCompat="@drawable/ic_router" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_getWifi"
            android:layout_width="82dp"
            android:layout_height="85dp"
            android:layout_marginBottom="119dp"
            android:layout_marginTop="134dp"
            android:clickable="true"
            app:backgroundTint="@android:color/holo_green_light"
            app:layout_constraintBottom_toTopOf="@+id/fab_shareWifi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_search_wireless_net" />

        <TextView
            android:id="@+id/textView_sharewifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="332dp"
            android:layout_marginTop="56dp"
            android:text="Share Your Wifi:"
            android:textColor="@android:color/holo_green_light"
            app:layout_constraintBottom_toTopOf="@+id/_dynamic"
            app:layout_constraintStart_toStartOf="@+id/fab_getWifi"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_getwifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="295dp"
            android:text="Serch For Wifi:"
            android:textColor="@android:color/holo_green_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/fab_shareWifi"
            app:layout_constraintTop_toBottomOf="@+id/fr_listvw" />

        <ListView
            android:id="@+id/fr_listvw"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="53dp"
            android:layout_marginTop="25dp"
            android:background="@android:color/holo_orange_light"
            app:layout_constraintBottom_toTopOf="@+id/textView_getwifi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_start_connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start"
            tools:layout_editor_absoluteX="262dp"
            tools:layout_editor_absoluteY="444dp" />
        "/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>